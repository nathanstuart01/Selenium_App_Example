<!DOCTYPE html>
<html>
  <head>
    <title>UserBeers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
        <div class='flash <%= type %>'
          <%= message %>
        </div>
    <% end %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
